<nav aria-label="Page navigation" >
    <ul class="pagination justify-content-center" >

        <% if (locals.currentPage > 1) { %>

            <li class="page-item">
                <a class="page-link" style="background-color: white;border-color:rgb(99, 97, 97);" href="?page=<%= locals.currentPage - 1 %>" aria-label="Previous">
                    <span aria-hidden="true">&lt;</span>
                </a>
            </li>

        <% } %>

        <% for (let i = 1; i <= locals.totalPages; i++) { %>

            <li class="page-item <%= locals.currentPage === i ? 'active' : '' %>">
                <a class="page-link" style="background-color: white;border-color:rgb(99, 97, 97);color: black;" href="?page=<%= i %>"><%= i %></a>
            </li>

        <% } %>

        <% if (locals.currentPage < locals.totalPages) { %>

            <li class="page-item" style="background-color: white;border-color:rgb(99, 97, 97);">
                <a class="page-link" style="background-color: white;border-color:rgb(99, 97, 97)" href="?page=<%= locals.currentPage + 1 %>" aria-label="Next">
                    <span aria-hidden="true">&gt;</span>
                </a>
            </li>

        <% } %>

    </ul>
</nav>